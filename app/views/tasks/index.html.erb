

<!DOCTYPE html>
<html>
<header>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" >

          <p>Project: <%= @project.name%></p>
        </a>
      </div>
    </div>
  </nav>
</header>
<body class="bg-success">
<div class="row row-grid text-info">
  <div class="col-md-12 text-center">
    <p  class="text-info" ><%= link_to 'Back',"/#{@user.role.gsub(' ','_')}"%></p>
  </div>
</div>
<br>

<div class="row row-grid text-info">
  <div class="col-md-12 text-center">
    <% @project.id%>
    <p  class="text-info" ><%= link_to "Add new task", new_project_task_path%></p>
  </div>
<br>

<div class="row row-grid text-info">
  <div class="col-md-6 ">
    <div class="col-md-12 bg-info ">
      <h4 class="text-center">Available Tasks:</h4>
      <table class="table ">
        <thead class="text-center">

        <tr>
          <th class="text-center">Name</th>
          <th class="text-center"></th>
          <th class="text-center"></th>
          <th class="text-center"></th>
          <th class="text-center"></th>
          <th>Time worked</th>
          <th> Status </th>
        </tr>
        </thead>
        <tbody>
        <%  @project.tasks.each do |t| %>
        <tr>
          <td class="text-center"><%=t.title%></td>
          <td class="text-center"><%= button_to 'Delete',[t.project,t],method: :delete, data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-danger'%></td>
          <td ><%=link_to '<i  class="glyphicon glyphicon-play "></i>'.html_safe, {controller: 'tasks', action: 'start_task', id: t.id, project_id: @project.id}, class: "btn btn-xs" %>

          </td>
          <td><%= link_to '<i class="glyphicon glyphicon-pause"></i>'.html_safe, {controller: 'tasks', action: 'pause_task', id: t.id, project_id: @project.id}, class: "btn btn-xs"  %>

          </td>
          <td><%= link_to '<i class="glyphicon glyphicon-stop"></i>'.html_safe, {controller: 'tasks', action: 'stopped_task', id: t.id, project_id: @project.id}, class: "btn btn-xs"  %>

          </td>
          <td><%= t.time_worked %> seconds</td>
          <td><%= t.status%></td>
        </tr>
        <%end%>
        </tbody>

      </table>
    </div>
  </div>
</div>
  </div>

<br>
<script>

</script>
</body>
</html>
