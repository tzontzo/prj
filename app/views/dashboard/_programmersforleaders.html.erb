<div class="col-md-6"  style="height: 300px;  overflow:auto;">
  <div class="col-md-12 bg-info ">
    <table class="table ">
      <h4 class="text-center">List of programmers:</h4>
      <thead>
      <tr >
        <th>Name</th>
        <th>Email</th>

      </tr>
      </thead>
      <%   %>
      <% User.where(role: 'programmer').each do |user| %>
          <tbody>
          <tr>
            <td ><%= user.name %></td>
            <td ><%= user.email %></td>

          </tr>
          </tbody>
      <% end %>
    </table>
  </div>
</div >
