<p>Hello admin</p>
<p>
  List of programmers:
</p>
<table style="border: 1px solid">
  <tr >
    <th style="border: 1px solid">Name</th>
    <th style="border: 1px solid">Email</th>
  </tr>
  <% @user = User.where(role: 'programmer') %>
  <% @user.each do |user| %>

  <tr>
        <td style="border: 1px solid"><%= user.name %></td>
        <td style="border: 1px solid"><%= user.email %></td><br>
  </tr>
  <% end %>
</table>
<p>
  List of team leaders:
</p>
<table style="border: 1px solid">
  <tr >
    <th style="border: 1px solid">Name</th>
    <th style="border: 1px solid">Email</th>
  </tr>
  <% @user = User.where(role: 'team leader') %>
  <% @user.each do |user| %>

      <tr>
        <td style="border: 1px solid"><%= user.name %></td>
        <td style="border: 1px solid"><%= user.email %></td><br>
      </tr>
  <% end %>
</table>
<p>
  List of projects:
</p>
<table style="border: 1px solid">
  <tr >
    <th style="border: 1px solid">Name</th>
    <th style="border: 1px solid">Details</th>
  </tr>
  <% @project = Project.all %>
  <% @project.each do |user| %>

      <tr>
        <td style="border: 1px solid"><%= user.name %></td>
        <td style="border: 1px solid"><%= user.description %></td><br>
      </tr>
  <% end %>
</table>
<p>
  <%= link_to "New project", controller: "projects", action: "new", id: @project %>
</p>